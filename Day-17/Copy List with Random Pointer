
class Solution {
   public Node copyRandomList(Node head) {
        if (head == null) return null;

        Node temp = head;
        while (temp != null) {
            Node copy = new Node(temp.val);
            copy.next = temp.next;
            temp.next = copy;
            temp = copy.next;
        }

        temp = head;
        while (temp != null) {
            if (temp.random != null) {
                temp.next.random = temp.random.next;
            }
            temp = temp.next.next;
        }

        Node dummy = new Node(-1);
        Node copyIter = dummy;
        temp = head;
        while (temp != null) {
            copyIter.next = temp.next;
            copyIter = copyIter.next;
            temp.next = temp.next.next;
            temp = temp.next;
        }

        return dummy.next;
    }
}
